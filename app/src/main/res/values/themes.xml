<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.RecordIPIN" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.RecordIPIN" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/TealGreen</item>
        <item name="colorPrimaryVariant">@color/TealGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:requestLegacyExternalStorage" tools:targetApi="q">true</item>
        <item name="android:preserveLegacyExternalStorage" tools:targetApi="r">true</item>
        <item name="overlapAnchor">false</item> <!--ActionBar关闭Overlay Mode-->
    </style>

    <!--利用themes设置页面切换动画似乎对Android 10 Q（小米8测试）无效-->
    <style name="MyAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/center_to_left</item>
        <item name="android:activityOpenEnterAnimation">@anim/right_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/center_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_to_center</item>
<!--        <item name="android:taskOpenExitAnimation">@anim/center_to_bottom</item>-->
<!--        <item name="android:taskOpenEnterAnimation">@anim/top_to_center</item>-->
<!--        <item name="android:taskCloseExitAnimation">@anim/center_to_top</item>-->
<!--        <item name="android:taskCloseEnterAnimation">@anim/bottom_to_center</item>-->
<!--        <item name="android:taskToFrontExitAnimation">@anim/center_to_bottom</item>-->
<!--        <item name="android:taskToFrontEnterAnimation">@anim/top_to_center</item>-->
<!--        <item name="android:taskToBackExitAnimation">@anim/center_to_bottom</item>-->
<!--        <item name="android:taskToBackEnterAnimation">@anim/top_to_center</item>-->
    </style>

    <style name="MyNoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

</resources>