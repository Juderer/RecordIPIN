<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/layout_imu"
            android:id="@+id/layoutImu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <include
            layout="@layout/layout_option"
            android:id="@+id/layoutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutImu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnImuStart"
            android:layout_width="168dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:text="Start"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:typeface="serif"
            android:backgroundTint="@color/SteelBlue"
            android:textColor="@color/black"
            android:layout_below="@+id/layoutOption"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>

    </RelativeLayout>
</ScrollView>