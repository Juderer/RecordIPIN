<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImuActivity">

    <Button
        android:id="@+id/btnImuStart"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="Start"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:typeface="serif"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2,3">

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">
            <TextView
                android:text="传感器"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:text="X"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:text="Y"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:text="Z"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:text="加速度计"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvAcceX"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvAcceY"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvAcceZ"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:text="陀螺仪"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvGyroX"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvGyroY"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvGyroZ"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:text="磁力计"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvMagX"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvMagY"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvMagZ"
                android:text="0"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>